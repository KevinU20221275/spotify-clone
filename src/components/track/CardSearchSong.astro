---
import type { Song } from '@/data/songs'
import { SinglePlaySong } from '../common/SinglePlayButton'

interface Props {
    s: Song
}

const {s} = Astro.props
---

<div class="grid grid-cols-4 xl:grid-cols-5 w-full rounded-md p-2 hover:bg-zinc-800 group">
    <div class="flex gap-2 items-center col-span-3">
        <picture class="relative w-10 h-10 rounded-md overflow-hidden">
            <SinglePlaySong song={s} className={'text-zinc-300 absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100'} client:visible />
            <img src={s.image} alt={`image of ${s.title} song`} class="w-full object-cover">
        </picture>
        <div class="leading-0 flex flex-col">
            <a href={`/intl-es/track/${s.id}`} class="text-zinc-300 text-base hover:underline">
                {s.title}
            </a>
            <span class="text-sm text-zinc-400 ">{s.artists.join(', ')}</span>
        </div>
    </div>
    <div class="xl:inline-block hidden text-zinc-400 col-span-1 content-center text-end pr-10">
        {s.streams}
    </div>
    <div class="text-zinc-400 col-span-1 content-center text-end pr-10">
        {s.duration}
    </div>
</div>