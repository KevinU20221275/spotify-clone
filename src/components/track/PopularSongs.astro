---
// import type
import type { Song } from '@/data/songs'

// import components
import CardSearchSong from './CardSearchSong.astro'

interface Props {
    popularSongs: Song[]
    artistName : string
}

const { popularSongs, artistName } = Astro.props
---

<section class="p-4">
    <span class="inline-block text-sm text-zinc-500">Canciones populares de</span>
    <h3 class="text-2xl font-extrabold text-white">{artistName}</h3>
    <article>
        {popularSongs.map((s) => <CardSearchSong s={s} />)}
    </article>
</section>
