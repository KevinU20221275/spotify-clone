---
// import type
import type { Playlist } from '@/data/playlist'

// import components
import PlayListItemCard from '../playlist/PlayListItemCard.astro'

interface Props {
    playlistsFiltered: Playlist[]
}

const { playlistsFiltered } = Astro.props
---

<section>
    <h4 class="text-2xl text-bold text-white">Playlists</h4>
    <article class="flex flex-wrap mt-6 gap-4">
        {playlistsFiltered.map((playlist) => <PlayListItemCard playlist={playlist} />)}
    </article>
</section>