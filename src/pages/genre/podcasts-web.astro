---
import Layout from "@/layouts/Layout.astro";
import PreFooter from "@/components/common/PreFooter.astro";
import { podcastsCategories } from "@/data/podcastsCategories"
import CategoryCardItem from "@/components/common/CategoryCardItem.astro";
import GoTo from "@/icons/GoTo.astro";
---

<Layout title="Spotify - Podcasts categories">
    <main class="relative bg-[#29846B]">
        <section class="h-52 flex items-end p-4 bg-gradient-to-b from-transparent to-[#1115]">
            <h1 class="text-7xl text-white font-bold relative z-40">Podcasts</h1>
        </section>
        <section class="bg-gradient-to-b from-[#1118] to-transparent px-4 py-10 relative z-40">
            <h3 class="text-2xl font-bold text-white mb-4">Categor√≠as</h3>
            <article class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                {
                    podcastsCategories.map((category) => <CategoryCardItem item={category} />)
                }
            </article>
            <a href="#">
                <button class="bg-zinc-800 hover:bg-zinc-700 text-sm text-white px-3 py-1 rounded-full mt-10 cursor-pointer flex justify-center items-center gap-1">Ver todad las categorias <GoTo/> </button>
            </a>
        </section>
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80">

		</div>
    </main>
    <PreFooter/>
</Layout>